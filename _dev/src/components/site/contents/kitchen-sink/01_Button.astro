---
import ContentSection from "../../containers/ContentSection.astro"
import PartsGalleryItem from "../../elements/PartsGalleryItem.astro"
import Button from "../../../systems/atoms/Button.astro"
import { buttonGalleryList, buttonFullGalleryList } from '../../../../constants/buttonGalleries'
---
<ContentSection titleTag="h2" title="Button" id="button">
  <dl class="parts-gallery">
    {buttonGalleryList.map(item => 
      <PartsGalleryItem title={ item.title }>
        <Button
            label={ item.label }
            buttonType={ item.buttonType }
            buttonClass={ item.buttonClass }
            isFull={ item.isFull }
            isDisabled={ item.isDiabled }
          />
      </PartsGalleryItem>  
    )}
  </dl>
  <dl class="parts-gallery full">
    {buttonFullGalleryList.map(item => 
      <PartsGalleryItem title={ item.title }>
        <Button
            label={ item.label }
            buttonType={ item.buttonType }
            buttonClass={ item.buttonClass }
            isFull={ item.isFull }
            isDisabled={ item.isDiabled }
          />
      </PartsGalleryItem>  
    )}
  </dl>
</ContentSection>