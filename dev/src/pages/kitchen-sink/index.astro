import Modal from '../../components/systems/containers/Modal.astro'
import PartsGalleryItem from '../../components/site/elements/PartsGalleryItem.astro'

const buttonGalleryList = [
  {
    title: '通常',
    label: 'クリックして送信',
    buttonType: 'button',
    buttonClass: '',
    isFull: '',
    isDiabled: false
  },
  {
    title: 'ゴースト',
    label: 'クリックして送信',
    buttonType: 'button',
    buttonClass: 'ghost',
    isFull: '',
    isDiabled: false
  },
  {
    title: 'オプショナル',
    label: 'クリックして送信',
    buttonType: 'button',
    buttonClass: 'optional',
    isFull: '',
    isDiabled: false
  },
  {
    title: '不活性',
    label: 'クリックして送信',
    buttonType: 'button',
    buttonClass: '',
    isFull: '',
    isDiabled: true
  },
  {
    title: '不活性ゴースト',
    label: 'クリックして送信',
    buttonType: 'button',
    buttonClass: 'ghost',
    isFull: '',
    isDiabled: true
